    "@next/bundle-analyzer": "^12.1.0",
    "@types/lodash": "^4.14.179",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@types/react-lazyload": "^3.1.1",
    "@types/react-scroll": "^1.8.3",
    "@types/simple-icons": "^5.21.1",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "husky": "^7.0.4",
