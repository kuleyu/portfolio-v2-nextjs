{
  "name": "nextjs-static-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "pretty": "npx prettier --write . && npx prisma format",
    "lint": "next lint",
    "dev": "next dev",
    "build": "contentlayer build && next build",
    "start": "next start -p 3000",
    "prepare": "husky install",
    "analyze": "ANALYZE=true npm run build"
