  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "@csstools/convert-colors": "^2.0.0",
    "babel-plugin-superjson-next": "^0.4.2",
    "contentlayer": "^0.0.33",
    "next": "^12.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-contentlayer": "^0.0.33",
    "next-pwa": "^5.4.6",
    "next-seo": "^5.1.0",
    "random-gradient": "^0.0.2",
    "react": "17.0.2",
    "react-card-flip": "^1.1.5",
    "react-dancing-lines": "^1.1.4",
    "react-dom": "17.0.2",
    "react-hooks-visible": "^1.1.1",
    "react-icon-cloud": "^4.0.0",
    "react-lazyload": "^3.2.0",
    "react-scroll": "^1.8.6",
